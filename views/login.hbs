<script src="/static/js/login.js"></script>

<div class="uk-card uk-card-default uk-card-body uk-card-large uk-position-center">
  <h3 class="uk-align-center">Login</h3>
  <form id="login-form" onsubmit="login(event);" class="uk-margin">
    <div class="uk-margin">
      <div class="uk-inline">
        <span class="uk-form-icon" uk-icon="icon: user"></span>
        <input class="uk-input" id="username" pattern="^[a-zA-Z0-9]{2,}$" type="text" placeholder="Username" required>
      </div>
    </div>

    <div class="uk-margin">
      <div class="uk-inline">
        <span class="uk-form-icon" uk-icon="icon: lock"></span>
        <input class="uk-input" id="password" pattern="^[a-zA-Z0-9]{2,}$" type="password" placeholder="Password" required>
      </div>
    </div>

    <input class="uk-input" type="submit" value="LOGIN">
  </form>
</div>